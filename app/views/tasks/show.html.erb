<h1><%= @task.title %></h1>

<p>Details: <%= @task.details %></p>
<p><%= @task.completed ? "[X] - This task is completed" : "[ ] - This task is not completed yet" %></p>

<p><%= link_to "Edit this task", edit_task_path(@task)  %></p>
<p><%= link_to "Delete this task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>


<p><%= link_to "Back to list", tasks_path %></p>
